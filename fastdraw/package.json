{
  "name": "fastdraw",
  "version": "0.4.8",
  "description": "A framework-agnostic whiteboard component",
  "main": "./dist/core/core.cjs.js",
  "module": "./dist/core/core.es.js",
  "types": "./dist/core/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/core/core.es.js",
      "require": "./dist/core/core.cjs.js",
      "types": "./dist/core/index.d.ts"
    },
    "./react": {
      "import": "./dist/adapters/react/react.es.js",
      "require": "./dist/adapters/react/react.cjs.js",
      "types": "./dist/adapters/react/index.d.ts"
    },
    "./react/style.css": {
      "import": "./dist/adapters/react/style.css"
    },
    "./vue": {
      "import": "./dist/adapters/vue/vue.es.js",
      "require": "./dist/adapters/vue/vue.cjs.js",
      "types": "./dist/adapters/vue/index.d.ts"
    }
  },
  "scripts": {
    "build:core": "vite build --config vite.core.config.ts",
    "build:react": "vite build --config vite.react.config.ts",
    "build:vue": "vite build --config vite.vue.config.ts",
    "build": "pnpm run build:core && pnpm run build:react && pnpm run build:vue",
    "dev": "vite",
    "lint": "eslint . --ext .ts,.vue"
  },
  "dependencies": {
    "@pixi/constants": "^7.4.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/d3-quadtree": "^3.0.6",
    "@types/react": "^19.2.8",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "d3-quadtree": "^3.0.1",
    "eslint": "^8.40.0",
    "pixi.js": "^8.15.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "vue": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}